<h1>New Answer</h1>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Write a new comment</h1>
  </div>
</div>

<form>
  <div class="form-group">
    <label for="questions">Select a question</label>
    <select class="form-control" id="questions" name="questions">
       <% weddings.forEach((wedding) => { %>
         <option><%= wedding.questions.content %></option>
        <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="answers">Write your answer here</label>
    <textarea class="form-control" id="answers" name="answers" rows="3"></textarea>
  </div>
</form>
