<h1>Login User</h1>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Login</h1>
    <a class="btn btn-primary btn-lg" href="/users/new" role="button">Or register as a new user here...</a>
  </div>
</div>

<form form method="POST" action="/login">
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="Enter email" id="email" name="email">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password-login" placeholder="Password" id="password" name="password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
